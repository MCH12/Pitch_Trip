<p id="notice"><%= notice %></p>

<div class="page-header">
<h1 id="timeline">Upcoming trips</h1>
</div>

<table class= "table table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th>Country</th>
      <th>Start date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.description %></td>
        <td><%= trip.country %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.time %></td>
        <td><%= link_to 'Show', trip %></td>
       <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
